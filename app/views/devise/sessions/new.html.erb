<div class="span12">

<h2>登入</h2>
<hr />
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, label: '電子郵件'  %>
    <%= f.input :password, :required => false, label: '密碼'  %>
    <%= f.input :remember_me, label: '記得我', :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
