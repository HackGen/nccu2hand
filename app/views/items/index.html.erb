<% if !current_user %>
	<div class="span12">
	  <div class="jumbotron">
	    <h1>Welcome to NCCU2HAND!</h1>
	    <p class="lead">The missing trading store for students.</p>
	    <%= link_to "馬上註冊", new_user_registration_path, 
	                                 class: "btn btn-large btn-success" %>
	  </div>
	</div>
<% else %>
  <div class="span12">
  <%= render :partial => "items/category", :collection => @categories, :as => :category %>
  <ul>
		<div class="items">
		<% if not @items.empty? %>	 		
	 		<%= render :partial => "items/item", :collection => @items, :as => :item %>
		<% else %>
			<h3>目前還未有上架商品</h3>
		<% end %>
	 	</div>
  </ul>
	</div>
<% end %>
