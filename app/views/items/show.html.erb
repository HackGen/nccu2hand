<div class="span12">
  <% if @item.user != current_user %>
    <div class="follows">
      <% if @item.is_being_followed_by?(current_user) %>
        <%= render 'unfollow' %>
      <% else %>
        <%= render 'follow' %>
      <% end %>
    </div>
  <% end %>
  <table class="table table-hover">  
    <tr>
      <th><%= t("activerecord.attributes.item.photo") %></th><td><%= image_tag(@item.photo_url(:normal), class: "media-object thumbnail pull-left") %></td>  
    </tr>
    <tr>
      <th><%= t("activerecord.attributes.item.title") %></th><td><%= @item.title %></td>   
    </tr>
  <tr>
      <th><%= t("activerecord.attributes.item.status") %></th><td><%= @item.status %></td>
  </tr>
    <tr>
      <th><%= t("activerecord.attributes.item.price") %></th><td><%= @item.price %></td>
    </tr>  
    <tr>
      <th><%= t("activerecord.attributes.item.description") %></th><td><%= truncate(@item.description, length: 50) %></td>
    </tr>
    <tr>
      <th><%= t("item.create_time") %></th><td><%= time_ago_in_words(@item.created_at) %> 之前</td>
    </tr>
  </table>
</div>