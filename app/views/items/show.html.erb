<div class="span12">
  <table class="table table-hover">  
    <tr>
      <th><%= t("activerecord.attributes.item.photo") %></th><td><%= image_tag(@item.photo_url, class: "media-object thumbnail pull-left", size: '100X100') %></td>  
    </tr>
    <tr>
      <th><%= t("activerecord.attributes.item.title") %></th><td><%= @item.title %></td>   
    </tr>
    <tr>
      <th><%= t("activerecord.attributes.item.status") %></th><td><%= @item.status %></td>
    </tr>
    <tr>
      <th><%= t("activerecord.attributes.item.price") %></th><td><%= @item.price %></td>
    </tr>  
    <tr>
      <th><%= t("activerecord.attributes.item.description") %></th><td><%= truncate(@item.description, length: 50) %></td>
    </tr>
    <tr>
      <th><%= t("item.create_time") %></th><td><%= time_ago_in_words(@item.created_at) %></td>
    </tr>
    <tr>
      <th><%= t("item.is_interested") %></th><td></td>  
    </tr>  
  </table>
</div>